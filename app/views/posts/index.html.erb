<h1>All products</h1>

<% @posts.each do |post| %>

    <li> <%= link_to "#{post.product.name}", post_path(post.id) %></li>
    <li> Price Per Unit: <%=  post.price_per_unit %> </li>
    <li> Units Available: <%= post.units_available %> </li>
    <li> City: <%= post.city %> </li>
    <li> State: <%= post.state %> </li>
<% end %>